<section class="pb-8">
    <div class="flex flex-row justify-between pb-6">
        <div class="flex flex-col text-custom-blue-darker">
            <h2 class="text-3xl font-semibold pb-2">Meilleures catégories</h2>
            <p>Les catégories les plus populaires</p>
        </div>
        <div class="flex flex-row items-center">
            <button class="border-2 border-custom-blue mx-2 p-1 rounded-md group hover:border-orange-400 swiper-button-prev-best-categories">
                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg" aria-hidden="true"
                     class="h-4 w-4 text-custom-blue group-hover:text-orange-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"></path>
                </svg>
            </button>
            <button class="border-2 border-custom-blue mx-2 p-1 rounded-md group hover:border-orange-400 swiper-button-next-best-categories">
                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg" aria-hidden="true"
                     class="h-4 w-4 text-custom-blue group-hover:text-orange-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
                </svg>
            </button>
        </div>
    </div>
    <hr class="w-full">
    <div class="swiper best-categories__slider">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-8">
                {% for category in bestCategories|slice(0,12) %}
                        <div class="col-span-1 flex flex-row border border-gray-400 rounded-lg">
                            <a href="#" class="block w-full">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="w-[105px] mx-auto pt-4 pb-2">
                                            <img src="{{ category.best_selling_product_picture }}" alt="{{ category.best_selling_product }}"
                                                 class="h-[80px]">
                                        </div>
                                        <div class="pt-2 pb-4">
                                            <p class="text-xl text-custom-blue-darker font-semibold text-center">{{ category.name }}</p>
                                            <p class="text-md text-custom-blue text-center">{{ category.total_products }} produits</p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                {% endfor %}
                </div>
            </div>
            <div class="swiper-slide">
                <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-8">
                    {% for category in bestCategories|slice(12,24) %}
                        <div class="col-span-1 flex flex-row border border-gray-400 rounded-lg">
                            <a href="#" class="block w-full">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="w-[105px] mx-auto pt-4 pb-2">
                                            <img src="{{ category.best_selling_product_picture }}" alt="{{ category.best_selling_product }}"
                                                 class="h-[80px]">
                                        </div>
                                        <div class="pt-2 pb-4">
                                            <p class="text-xl text-custom-blue-darker font-semibold text-center">{{ category.name }}</p>
                                            <p class="text-md text-custom-blue text-center">{{ category.total_products }} produits</p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

