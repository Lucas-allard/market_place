<section>
    <div class="flex flex-row justify-between pb-6">
        <div class="flex flex-col text-custom-blue-darker">
            <h2 class="text-3xl font-semibold pb-2">Meilleurs ventes</h2>
            <p>Les produits les plus vendus du mois</p>
        </div>
        <div class="flex flex-row items-center">
            <button class="border-2 border-custom-blue mx-2 p-1 rounded-md group hover:border-orange-400 swiper-button-prev-top-product">
                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg" aria-hidden="true"
                     class="h-4 w-4 text-custom-blue group-hover:text-orange-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"></path>
                </svg>
            </button>
            <button class="border-2 border-custom-blue mx-2 p-1 rounded-md group hover:border-orange-400 swiper-button-next-top-product">
                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg" aria-hidden="true"
                     class="h-4 w-4 text-custom-blue group-hover:text-orange-400">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
                </svg>
            </button>
        </div>
    </div>
    <hr class="w-full">
    <!-- Slider main container -->
    <div class="swiper top-product__slider">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide">
                <div class="flex flex-col flex-wrap md:flex-row gap-4">
                    {% for product in topProducts|slice(0,9) %}
                        <div class="md:w-[calc(50%-8px)] lg:w-[calc(33.33%-12px)] flex flex-row border border-gray-400 rounded-lg px-4 py-8 my-4">
                            <div class="h-[200px] min-w-[95px] max-w-[95px]">
                                <a href="#" class="h-1/3 block">
                                    <img src="{{ asset('images/58ac4b940aaa10546adf2706.png') }}"
                                         alt="{{ product.name }}"
                                         class="w-[85px] h-auto object-cover mx-auto">
                                </a>
                            </div>
                            <div class="flex-1 flex flex-col">
                                <a href="#"
                                   class="text-custom-blue-darker font-semibold text-lg hover:text-orange-400">{{ product.name }}</a>
                                <p class="text-custom-blue-darker font-semibold text-lg">{{ product.price }} €</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="swiper-slide">
                <div class="flex flex-col flex-wrap md:flex-row gap-4">
                    {% for product in topProducts|slice(9,18) %}
                        <div class="w-full md:w-[calc(50%-8px)] lg:w-[calc(33.33%-12px)] flex flex-row border border-gray-400 rounded-lg px-4 py-8 my-4">
                            <div class="h-[200px] min-w-[95px] max-w-[95px]">
                                <a href="#" class="h-1/3 block">
                                    <img src="{{ asset('images/58ac4b940aaa10546adf2706.png') }}"
                                         alt="{{ product.name }}"
                                         class="w-[85px] h-auto object-cover mx-auto">
                                </a>
                            </div>
                            <div class="flex-1 flex flex-col">
                                <a href="#"
                                   class="text-custom-blue-darker font-semibold text-lg hover:text-orange-400">{{ product.name }}</a>
                                <p class="text-custom-blue-darker font-semibold text-lg">{{ product.price }} €</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
{% block javascripts %}
    {{ encore_entry_script_tags('topProduct') }}
{% endblock %}
