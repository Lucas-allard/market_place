<section class="px-2 md:px-8 lg:px-16 pt-8 pb-8">
    <div class="flex flex-row justify-between pb-6">
        <div class="flex flex-col text-custom-blue-darker">
            <h2 class="text-3xl font-semibold pb-2">Meilleures ventes</h2>
            <p>Les produits les plus vendus du mois</p>
        </div>
        <div class="flex flex-row items-center">
            <button class="border-2 border-custom-blue mx-2 p-1 rounded-md group hover:border-orange-400  transition-all swiper-button-prev-top-product">
                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg" aria-hidden="true"
                     class="h-4 w-4 text-custom-blue group-hover:text-orange-400  transition-all">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"></path>
                </svg>
            </button>
            <button class="border-2 border-custom-blue mx-2 p-1 rounded-md group hover:border-orange-400 transition-all swiper-button-next-top-product">
                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg" aria-hidden="true"
                     class="h-4 w-4 text-custom-blue group-hover:text-orange-400 transition-all">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
                </svg>
            </button>
        </div>
    </div>
    <hr class="w-full">
    <div class="swiper top-product__slider">
        <div class="swiper-wrapper pt-6">
            <div class="swiper-slide">
                <div class="flex flex-col flex-wrap md:flex-row gap-4">
                    {% for product in topProducts|slice(0,9) %}
                        <div class="group md:w-[calc(50%-8px)] lg:w-[calc(33.33%-12px)] flex flex-row bg-white  transition-all border border-gray-200 hover:border-custom-blue rounded-md hover:translate-y-[-5px] shadow-sm px-4 py-8 my-4">
                            <div class="h-[100px] w-1/3">
                                <a href="#" class="h-1/3 block">
                                    <img src="{{ asset('images/58ac4b940aaa10546adf2706.png') }}"
                                         alt="{{ product.name }}"
                                         class="w-[85px] h-auto object-cover mx-auto">
                                </a>
                            </div>
                            <div class="w-2/3 ">
                                <div class="pb-4 flex flex-col">
                                    <p class="text-custom-blue text-sm ">
                                        <a href=""
                                           class="hover:text-orange-400  transition-all">{{ product.brand.name }}</a>
                                    </p>
                                    <p class="text-custom-blue-darker font-semibold text-lg">
                                        <a href="" class="hover:text-orange-400  transition-all">{{ product.name }}</a>
                                    </p>
                                    <p class="text-custom-blue-darker font-semibold text-xs">
                                        {% for category in product.categories %}
                                            <a href="#"
                                               class="hover:text-orange-400  transition-all">{{ category.name }} </a>{% if not loop.last %},{% endif %}
                                        {% endfor %}
                                    </p>
                                </div>
                                <div class="flex flex-col lg:flex-row items-center gap-4">
                                    <p class="text-custom-blue-darker font-semibold text-lg">{{ product.price }} €</p>
                                    <button data-id="{{ product.id }}" data-url="#"
                                            class="px-6 flex flex-row justify-center">
                                        <svg class="h-8 w-8 text-custom-blue-darker hover:text-orange-400  transition-all"
                                             fill="none"
                                             stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                                             xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                  d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z"></path>
                                        </svg>
                                    </button>
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="swiper-slide">
                <div class="flex flex-col flex-wrap md:flex-row gap-4">
                    {% for product in topProducts|slice(0,9) %}
                        <div class="group md:w-[calc(50%-8px)] lg:w-[calc(33.33%-12px)] flex flex-row bg-white  transition-all border border-gray-200 hover:border-custom-blue rounded-md hover:translate-y-[-5px] shadow-sm px-4 py-8 my-4">
