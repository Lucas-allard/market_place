<section class="section">
    <div class="swiper-slider-nav">
        <div class="swiper-slider-nav-header">
            <h2>Meilleures marques</h2>
            <p>Les produits des marques les plus vendus du mois</p>
        </div>
        <nav class="swiper-slider-nav-buttons">
            <button class="swiper-button-prev-top-brands">
                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5"></path>
                </svg>
            </button>
            <button class="swiper-button-next-top-brands">
                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"
                     xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
                </svg>
            </button>
        </nav>
    </div>
    <hr>
    <div class="swiper top-brands__slider">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <article class="swiper-slider-wrapper">
                    {% for brand in topBrands|slice(0,10) %}
                        <div class="slider-item">
                            <div class="product-picture">
                                <a href="{{ path('app_product_show', {'categorySlug': brand.products[0].categories[0].slug, 'subCategorySlug': brand.products[0].categories[1].slug, 'productSlug': brand.products[0].slug }) }}">
                                    <img src="{{ brand.products[0].pictures[0].path }}"
                                         alt="{{ brand.products[0].pictures[0].alt }}">
                                </a>
                            </div>
                            <div class="product-content">
                                <div class="product-content-header">
                                    <h4 class="product-content-brand">{{ brand.name }}</h4>
                                    <p class="product-content-categories">
                                        {% for category in brand.products[0].categories %}
                                            {% if category.parent is null %}
                                                <a
                                                href="{{ path('app_product_index', {'categorySlug': category.slug }) }}">{{ category.name }} </a>{% if not loop.last %},{% endif %}
                                            {% else %}
                                                <a
                                                href="{{ path('app_product_index', {'categorySlug': category.parent.slug, 'subCategorySlug': category.slug }) }}">{{ category.name }} </a>{% if not loop.last %},{% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    </p>
                                </div>
                                <hr>
                                <p class="product-content-discount">
                                    Jusqu'Ã 
                                    <span>- {{ brand.products[0].discount }}%</span>
                                </p>
                                {{ include('components/_cart_button.html.twig', {'product': brand.products[0], 'buttonLabel': 'Ajouter au panier', 'className': 'button button-dark-blue'}) }}
                            </div>
                        </div>
                    {% endfor %}
                </article>
            </div>

        </div>
    </div>
</section>