{% extends 'user/index.html.twig' %}

{% block section %}
    <section class="account-section">
        <h2>Vous avez oublié votre mot de passe ?</h2>
        <div class="account-form-container">
            {{ form_start(resetForm, {'attr': {'class': 'account-form'}}) }}
            <p class="account-section-text">Entrez un nouveau mot de passe pour votre compte.</p>
            <div class="form-group small">
                <div>
                    {{ form_label(resetForm.password.first, 'Nouveau mot de passe') }}
                    {{ form_widget(resetForm.password.first) }}
                </div>
                {% for error in resetForm.password.first.vars.errors %}
                    <span class="form-error">{{ error.message }}</span>
                {% endfor %}
            </div>
            <div class="form-group small">
                <div>
                    {{ form_label(resetForm.password.second, 'Confirmer le mot de passe') }}
                    {{ form_widget(resetForm.password.second) }}
                </div>
                {% for error in resetForm.password.second.vars.errors %}
                    <span class="form-error">{{ error.message }}</span>
                {% endfor %}
            </div>
            <div class="form-group form-button">
                <button type="submit" class="button button-dark-blue">Réinitialiser le mot de passe</button>
            </div>
            {{ form_end(resetForm) }}
            <div class="account-image">
                <img src="{{ asset('images/warning.svg') }}"
                     alt="Attention, noter bien votre mot passe si vous le changer">
            </div>
        </div>
    </section>
{% endblock %}
