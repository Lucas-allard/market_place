{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{# ... #}

{% block body %}
    {% if error %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 my-4 rounded relative"
             role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="mt-16 font-dm-sans text-custom-blue flex flex-col lg:flex-row lg:h-[calc(100vh-120px)]">
        <div class="flex-1 px-12">
            <h1 class="text-3xl font-bold">Connexion</h1>
            <p class="text-sm">De retour parmi nous ?</p>
            <div class="w-full max-w-xs my-8">
                <form action="{{ path('app_login') }}" method="post">
                    <div class="mb-6">
                        <label for="username" class="block mb-2 text-sm font-medium">Email</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md rounded-md border-custom-blue focus:border-custom-blue focus:ring-0 block w-full p-2.5"
                        >
                    </div>
                    <div class="mb-6">
                        <label for="password" class="block mb-2 text-sm font-medium">Mot de passe</label>
                        <input type="password" id="password" name="_password"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md border-custom-blue focus:border-custom-blue focus:ring-0 block w-full p-2.5">
                    </div>
                    <div class="mb-6 flex flex-col lg:flex-row lg:justify-between lg:items-center">
                        <div class="my-2">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"
                                   class="rounded-md checked:bg-custom-blue focus:ring-0 text-custom-blue">
                            <label for="remember_me" class="text-sm font-medium">Se souvenir de moi</label>
                        </div>
                        <a href="#" class="text-sm underline hover:text-orange-400">Mot de passe
                            oublié ?
                        </a>
                    </div>
                    <input type="hidden" name="_target_path" value="/">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="mb-6">
                        <button type="submit"
                                class="bg-custom-blue text-white text-sm font-medium rounded-md px-4 py-2.5 hover:bg-orange-400 focus:outline-none focus:ring-0">
                            Connexion
                        </button>
                    </div>
                    <a href="{{ path('app_register') }}" class="text-sm underline hover:text-orange-400 my-2">Pas encore
                        inscrit ?</a>
                    <p class="text-sm hover:text-orange-400 my-2">Pour créer un compteur vendeur, cliquez
                        <a href="{{ path('app_register', {'type': 'seller'}) }}"
                           class="underline">
                            ici
                        </a>
                    </p>
                </form>
            </div>
        </div>
        <div class="hidden lg:block flex-1">
            <img src="{{ asset('images/login.svg') }}" alt="login" class="h-auto max-w-full w-2/3 select-none" draggable="false">
        </div>
    </div>

{% endblock %}